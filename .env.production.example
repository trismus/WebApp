# Production Environment Variables
# Copy this to .env on your production server and update with real values

# Application
NODE_ENV=production
PORT=5000

# Database - CHANGE THESE IN PRODUCTION!
POSTGRES_USER=webapp_user
POSTGRES_PASSWORD=CHANGE_THIS_SECURE_PASSWORD_123
POSTGRES_DB=webapp_db
DATABASE_URL=postgresql://webapp_user:CHANGE_THIS_SECURE_PASSWORD_123@postgres:5432/webapp_db

# JWT Secret - MUST BE CHANGED IN PRODUCTION!
JWT_SECRET=CHANGE_THIS_TO_A_VERY_LONG_RANDOM_STRING_IN_PRODUCTION
JWT_EXPIRE=7d

# Frontend (API URL is relative, proxied through Nginx)
REACT_APP_API_URL=/api

# Docker Image Configuration
GITHUB_REPOSITORY=trismus/webapp
IMAGE_TAG=latest

# Nginx Ports
HTTP_PORT=80
HTTPS_PORT=443
